#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

ENV_FILE="$REPO_ROOT/.env.local"
META_FILE="$REPO_ROOT/amo-metadata.json"

if [[ -f "$ENV_FILE" ]]; then
  source "$ENV_FILE"
fi

if ! command -v npm >/dev/null 2>&1; then
  echo "Error: npm is not installed."
  echo
  exit 1
fi

if [[ ! -x "$REPO_ROOT/node_modules/.bin/web-ext" ]]; then
  echo "Error: dependencies not installed. Run 'npm install' first."
  echo
  exit 1
fi

: "${WEB_EXT_API_KEY:?WEB_EXT_API_KEY not set}"
: "${WEB_EXT_API_SECRET:?WEB_EXT_API_SECRET not set}"

npm run build:firefox

SOURCE_CODE_ZIP_DIR="$REPO_ROOT/web-ext-artifacts/source-code"

source "$SCRIPT_DIR/zip-source-code"
zip_source_code "$REPO_ROOT" "$SOURCE_CODE_ZIP_DIR"

npx web-ext sign \
  --source-dir "$REPO_ROOT"/dist/firefox \
  --channel listed \
  --amo-metadata "$META_FILE" \
  --api-key "$WEB_EXT_API_KEY" \
  --api-secret "$WEB_EXT_API_SECRET" \
  --upload-source-code "$SOURCE_CODE_ZIP_DIR/source.zip" \
  "$@"

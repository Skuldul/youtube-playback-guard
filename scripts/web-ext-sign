#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

ENV_FILE="$REPO_ROOT/.env.local"
META_FILE="$REPO_ROOT/amo-metadata.json"

if [[ -f "$ENV_FILE" ]]; then
  source "$ENV_FILE"
fi

if ! command -v web-ext >/dev/null 2>&1; then
  echo "Error: web-ext is not installed."
  echo
  echo "Install it with:"
  echo "  npm install -g web-ext"
  echo
  exit 1
fi

: "${WEB_EXT_API_KEY:?WEB_EXT_API_KEY not set}"
: "${WEB_EXT_API_SECRET:?WEB_EXT_API_SECRET not set}"

web-ext sign \
  --source-dir "$REPO_ROOT" \
  --channel listed \
  --amo-metadata "$META_FILE" \
  --api-key "$WEB_EXT_API_KEY" \
  --api-secret "$WEB_EXT_API_SECRET"
